#!/bin/bash
if [ `./xmlquery --value MACH` == mira ]; then

  # for "small" runs on 512 nodes
  if [ `./xmlquery --value ATM_NTASKS` == 3600 ]; then
    ./xmlchange --file env_batch.xml --id JOB_WALLCLOCK_TIME --val 02:15:00

  # "medium" or "any" runs on 1024 nodes
  elif [ `./xmlquery --value ATM_NTASKS` == 7200 ]; then
    ./xmlchange --file env_batch.xml --id JOB_WALLCLOCK_TIME --val 01:30:00

  # "large" runs on 2048 nodes
  elif [ `./xmlquery --value ATM_NTASKS` == 14400 ]; then
    ./xmlchange --file env_batch.xml --id JOB_WALLCLOCK_TIME --val 00:45:00

  fi

./xmlchange --file env_run.xml --id CPL_PIO_TYPENAME --val netcdf

fi

